<%= form_for @ticket do |f| %>

<fieldset>
  
  <div>
    <% if @ticket.persisted? %>
        <b> ticket number : <%= @ticket.id %></b><br><br>
    <% end %>

    <% if @ticket.new_record? %>
        <b><%= f.label :submit_by, 'submitted by' %></b> <br> 
        <%= f.text_area :submit_by, size: "80x2", class:'form-control' %><br> <br>
    <% end %> 

    <b><%= f.label :title, 'title' %></b> <br>   
    <%= f.text_area :title, size: "80x2", class:'form-control' %><br><br>

    <b><%= f.label :body, 'description' %></b><br>
    <%= f.text_area :body, size: "80x8", class:'form-control', :placeholder => 'Please be specific and brief' %><br><br>

    <b> tracker </b><br>
    <%= f.radio_button :tracker, 'bug' %> bug <br>
    <%= f.radio_button :tracker, 'feature' %> feature <br>
    <%= f.radio_button :tracker, 'support' %> support <br><br>

    <b> severity </b><br>
    <%= f.radio_button :severity, 'low' %> low <br>
    <%= f.radio_button :severity, 'normal' %> normal <br>
    <%= f.radio_button :severity, 'urgent' %> urgent <br><br>

    <b> status </b><br>
    <%= f.radio_button :state, 'submitted' %> submitted <br>
    <%= f.radio_button :state, 'accepted' %> accepted <br>
    <%= f.radio_button :state, 'assigned' %> assigned <br>
    <%= f.radio_button :state, 'closed' %> closed <br><br>

    <b> assigned to </b><br>
    <%= f.radio_button :assignee, 'Wayne Gale' %> Wayne Gale <br>
    <%= f.radio_button :assignee, 'Mallory Knox' %> Mallory Knox <br>
    <%= f.radio_button :assignee, 'Jack Scagnetti' %> Jack Scagnetti <br>
    <%= f.radio_button :assignee, 'Mickey Knox' %> Mickey Knox <br>
    <%= f.radio_button :assignee, 'Dwight McClusky' %> Dwight McClusky <br><br>

      <div class="actions">
        <%= f.submit 'SAVE TICKET', class: 'btn btn-default btn-lg'%> 
      </div>
  </div>
 
</fieldset>

<% end %>
